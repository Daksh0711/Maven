#!/usr/bin/env/ groovy

pipeline{
  agent any
tools{
maven 'Maven'
}
 stages{
    stage('Validate Maven Project'){
      steps{
        script{
          bat 'mvn validate'
          }
        }
      }
    stage('compile Maven Project'){
      steps{
        script{
          bat 'mvn compile'
          }
        }
      }
 stage('build Maven Project'){
      steps{
        script{
          bat 'mvn build'
          }
        }
      }
 stage('test Maven Project'){
      steps{
        script{
          bat 'mvn test'
          }
        }
      }
 stage('deploy Maven Project'){
      steps{
        script{
          bat 'mvn deploy'
          }
        }
      }
    }
  }

